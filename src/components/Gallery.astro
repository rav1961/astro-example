---
import art1 from '/img2.jpg?url';
import art2 from '/img2.jpg?url';
import art3 from '/img2.jpg?url';
import art4 from '/img2.jpg?url';
---

<div class="mx-12">
  <h1 class="my-24 text-center text-xl">Latest Art Pieces</h1>
  <div class="grid grid-cols-1 gap-24 xl:mx-48 xl:grid-cols-2">
    <div class="relative group">
      <img
        src={art1}
        class="w-full z-10 rounded-lg transition-all group-hover:-translate-x-3"
        alt="picture"
      />
      <div
        class="absolute -z-[1] left-0 top-0 w-full h-full rounded-lg bg-black group-hover:translate-x-2 group-hover:translate-y-3 transition-all"
      >
      </div>
    </div>
    <div class="relative group">
      <img
        src={art2}
        class="w-full z-10 rounded-lg transition-all group-hover:-translate-x-3"
        alt="picture"
      />
      <div
        class="absolute -z-[1] left-0 top-0 w-full h-full rounded-lg bg-black group-hover:translate-x-2 group-hover:translate-y-3 transition-all"
      >
      </div>
    </div>
    <div class="relative group">
      <img
        src={art3}
        class="w-full z-10 rounded-lg transition-all group-hover:-translate-x-3"
        alt="picture"
      />
      <div
        class="absolute -z-[1] left-0 top-0 w-full h-full rounded-lg bg-black group-hover:translate-x-2 group-hover:translate-y-3 transition-all"
      >
      </div>
    </div>
    <div class="relative group">
      <img
        src={art4}
        class="w-full z-10 rounded-lg transition-all group-hover:-translate-x-3"
        alt="picture"
      />
      <div
        class="absolute -z-[1] left-0 top-0 w-full h-full rounded-lg bg-black group-hover:translate-x-2 group-hover:translate-y-3 transition-all"
      >
      </div>
    </div>
  </div>
</div>
